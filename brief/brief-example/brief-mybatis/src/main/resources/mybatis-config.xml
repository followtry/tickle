<?xml version="1.0" encoding="UTF-8" ?>     
<!DOCTYPE configuration     
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"     
    "http://mybatis.org/dtd/mybatis-3-config.dtd">  
<configuration>  
   <!--  <typeAliases>  
        给实体类起一个别名 UserPO  
        <typeAlias type="com.ykzhen.ch1.po.UserPO" alias="UserPO" />  
    </typeAliases>  --> 
    <!--数据源配置  这块用 mysql数据库 -->  
    <environments default="development">  
        <environment id="development">  
            <transactionManager type="jdbc" />  
            <dataSource type="POOLED">  
                <property name="driver" value="com.mysql.jdbc.Driver" />  
                <property name="url" value="jdbc:mysql://172.20.19.200:3306/worktime?characterEncoding=utf-8" />  
                <property name="username" value="worktime" />  
                <property name="password" value="worktime" />  
            </dataSource> 
        </environment>  
    </environments>  
    <mappers>  
        <!-- userMapper.xml装载进来  同等于把“dao”的实现装载进来 -->  
        <mapper resource="userMapper.xml"/>
    </mappers>  
</configuration> 
